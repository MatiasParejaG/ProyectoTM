<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF3E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- DNI con botón escáner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DNI del Paciente"
                android:inputType="number"
                android:paddingEnd="50dp"
                android:textColor="#000000"
                android:textColorHint="#9E9B9B"
                android:paddingRight="50dp" />

            <ImageButton
                android:id="@+id/btnScanDNI"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Escanear DNI"
                android:src="@android:drawable/ic_menu_camera"/>
        </RelativeLayout>

        <!-- Otros campos -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo"
            android:textColor="#000000"
            android:textColorHint="#9E9B9B"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono de Contacto"
            android:textColor="#000000"
            android:textColorHint="#9E9B9B"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de la Cita"
            android:textColor="#000000"
            android:textColorHint="#9E9B9B"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/etHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de la Cita"
            android:textColor="#000000"
            android:textColorHint="#9E9B9B"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cita"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
